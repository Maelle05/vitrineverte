<section class='container'>
  <p id="notice"><%= notice %></p>

  <h1>Product In Orders</h1>

  <table>
    <thead>
      <tr>
        <th>Order</th>
        <th>Product</th>
        <th>Quantity</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @product_in_orders.each do |product_in_order| %>
        <tr>
          <td><%= product_in_order.order_id %></td>
          <td><%= product_in_order.product_id %></td>
          <td><%= product_in_order.quantity %></td>
          <td><%= link_to 'Show', product_in_order %></td>
          <td><%= link_to 'Edit', edit_product_in_order_path(product_in_order) %></td>
          <td><%= link_to 'Destroy', product_in_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Product In Order', new_product_in_order_path %>
</section>