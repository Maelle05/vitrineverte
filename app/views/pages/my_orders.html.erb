<section class='container mb-5'>
    <h1 class="py-5">Mes commandes :</h1>
    <h2 class="py-3">Mes commandes en cours</h2>
    <table class="table" >
      <thead>
        <tr >
          <th scope="col" >n°</th>
          <th scope="col">Ma commande est-elle prête ?</th>
          <th scope="col">Ma commande a-t-elle été retirée ?</th>
          <th scope="col">Lien vers ma commande</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>

        <% @orders.each do |order| %>
            <% if (current_user == order.user && current_user.id != order.farm_id) %>
                <tr scope="row">
                <td><%= order.id %></td>
                <td><% if order.ready %> Oui <% else %> Non <% end %></td>
                <td><% if order.taken %> Oui <% else %> Non <% end %></td>
                <td><%= link_to "Voir la commande", farm_order_path(order.farm_id, order), class:"btn btn-primary" %>
                </tr>
            <% end %>
        <% end %>

      </tbody>
    </table>

    
    <h4 class="py-3">Les commandes de ma ferme</h4>
    <table class="table" >
      <thead>
        <tr >
          <th scope="col" >n°</th>
          <th scope="col">Ma commande est-elle prête ?</th>
          <th scope="col">Ma commande a-t-elle été retirée ?</th>
          <th scope="col">Lien vers cette commande</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <% if current_user.id == order.farm_id %>
            <tr scope="row">
              <td><%= order.id %></td>
              <td><% if order.ready %> Oui <% else %> Non <% end %></td>
              <td><% if order.taken %> Oui <% else %> Non <% end %></td>
              <td><%= link_to 'Voir la commande', farm_order_path(order.farm_id, order), class:"btn btn-primary" %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    


</section>
