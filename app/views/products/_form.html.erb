<%= simple_form_for [@farm, @product] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Nom du produit' %>
    <%= f.input :description, label: 'Description du produit' %>
    <%= f.input :price, label: 'Prix' %>
    <%= f.input :product_unit, label: 'Unité du Prix (ex: kg / la barquette)' %>
    <%= f.input :quantity, label: 'Stock disponible' %>
    <%= f.input :active, label: "Produit disponible à la vente"%>
  </div>
  <div class="form-actions">
    <%= f.button :submit, value: 'Valider les changements' %>
  </div>
<% end %>
