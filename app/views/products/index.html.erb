<h1>Products</h1>


<%= simple_form_for [@farm, @order] do |f| %>

  <table class="table">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Description</th>
        <th>Prix</th>
        <th>Quantité disponible</th>
        <% if current_user != @farm.user %>
          <th>Quantité commandée</th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
          <tr>
            <% if current_user == @farm.user %>
              <td class='products' >Modifier le produit <%= link_to product, edit_farm_product_path(@farm, product) %></td>
            <% else %>
              <td class='products' ><%= link_to product, [@farm, product] %></td>
            <% end %>
            <td><%= product.description %></td>
            <td>
              <strong class='price'> <%= product.price %> </strong>
              <%= product.product_unit %>
            </td>
            <td>
              <% if product.active %> <%= product.quantity %> <% else %> Ce produit n'est pas disponibe actuellement <% end %>
            </td>
            <% if current_user != @farm.user  %>
              <td>
                <input type="number" name="order[product_in_orders][]" class="form-control" min="0" 
                <% if !product.active %>
                  max="0" placeholder="Ce produit n'est pas disponibe actuellement"
                <%else %>
                  max="<%=product.quantity%>" value="<%= @order.item_for(product).quantity %>"
                <% end %>
                >
              </td>
            <% end %>
          </tr>
      <% end %>
    </tbody>
  </table>
  <% if current_user != @farm.user %>
    <div class="card" style="width: 18rem;">
      <div class="card-header">
        Mon Panier
      </div>
      <ul class="list-group list-group-flush" id='renderOrderSummery'>
        <!-- /!\ EVAN l'auto render est fait dans orderSummary.js si tu veux changer les class de la liste ;) -->
      </ul>
    </div>
    <br>
    <%= f.button :submit, 'Enregistrer et valider la commande' %>
  <% end %>
<% end %>



<% if current_user == @farm.user %>
  <%= link_to 'Nouveau produit', new_farm_product_path(@farm), class: 'btn btn-primary' %>
<% end %>


<%= javascript_pack_tag 'orderSummary', 'data-turbolinks-track': 'reload' %>