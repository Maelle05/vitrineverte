<div class="row ">
    <% @farms.each do |farm| %>
        <div class="card m-3 p-0 rounded-0 border-0 farm-card" style="width: 18rem;">
            <%= image_tag ("card-farm-img.png"), class: "card-img-top rounded-0", alt: "" %>
            <div class="card-body">
                <h5 class="card-title fs-3 fw-bold"><%= farm.name %></h5>
                <p class="card-text fs-6"><%= farm.description %></p>
                <%= link_to 'Passer commande', farm, class: 'btn btn-primary stretched-link border-0 button-farm-card mb-5'%>
                <div class="p-4  container-loc-farm-card float-end position-absolute bottom-0 end-0">
                    <p class="mb-0 "><%= farm.city %></p>
                    <%= image_tag ("location.png"), class: "h-25 ", alt: "" %>
                </div>
                
            </div>
        </div>
    <% end %>
</div>